<section class="p-5">
    <div class="container">
        <div class="d-flex flex-wrap">

            <% bids.forEach(bid => { %>

                <div class="card my-2 mx-3" style="width: 18rem">

                    <img class="m-2 mb-0 item-img" height="200px" src="https://i.pinimg.com/originals/1e/8e/83/1e8e8391f2a2bc230b00d6efb3fd92a8.jpg" class="card-img-top" alt="biditem-img">
    
                    <div class="card-body">
                        <h5 class="card-title mb-2 fw-light"><%= bid.bidname %></h5>
    
                        
                        <div class="card-text h5 mb-3"><span id="price" class=""> &#8377 <%= bid.bidprice %></span></div>
    
    
                        <div class="d-flex align-items-center justify-content-between my-2">
    
                            <div class="d-flex align-items-center h6 fw-light"><i class="bi bi-people-fill mx-1"></i>bids: <span id="bids" class="mx-1"> <%= bid.bidders.length %> </span></div>
    
                            <div class="d-flex align-items-center h6 fw-light"><i class="bi bi-alarm-fill mx-1"></i>duration: <span id="duration" class="mx-1"> <%= bid.duration %> d</span></div>
                        </div>
                      
                        <div class="d-flex align-items-center h6 fw-light"><span class="iconify" data-icon="jam:crown-f" data-inline="false"></span>Highest bidder: <span id="highest-bidder" class="mx-1 text-primary fw-bold">sam</span></div>
                        <div class="d-flex align-items-center h6 fw-light"><i class="bi bi-person-fill"></i>Item owner: <span id="owner" class="mx-1 text-primary fw-bold"><%= bid.owner %></span></div>
    
    
    
                        <button type="button" class="btn btn-primary text-light w-100 mt-2" data-bs-toggle="modal" data-bs-target="#bidding">
                            Bid now
                        </button>
                          
                          <!-- Modal -->
                        <div class="modal fade" id="bidding" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1">
                            <div class="modal-dialog">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <h5 class="modal-title" id="staticBackdropLabel">Enter your bidding amount</h5>
                                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                    </div>
                                    
                                    <form>
                                        <div class="modal-body">
                                            <div class="mb-3">
                                                <label for="bid-amount" class="form-label">Your bid</label>
                                                <input type="number" class="form-control" id="bid-amount" placeholder="1000">
                                            </div>
                                        </div>
                                        <div class="modal-footer">
                                            <button type="button" class="btn btn-primary text-light px-4">Bid</button>
                                        </div>
                                    </form>
                                    
                                    
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

            <% }) %>
            
        </div>
    </div>
</section>

